    							HorizontalAlignment="Center"
    							ContentSource="Header"
    							Margin="12,2,12,2"/>
    					</Border>
    				</Grid>
    			</ControlTemplate>
    		</Setter.Value>
    	</Setter>
    </Style>
    <Style x:Key="YellowTabItem" TargetType="{x:Type TabItem}">
    	<Setter Property="Template">
    		<Setter.Value>
