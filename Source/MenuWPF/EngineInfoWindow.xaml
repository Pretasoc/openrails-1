<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="MenuWPF.EngineInfoWindow"
	x:Name="Window"
	Title="EngineInfoWindow"
	Width="640" Height="480" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="openrails.ico" FontFamily="{DynamicResource {x:Static SystemFonts.MessageFontFamilyKey}}">
	<Window.Background>
		<ImageBrush ImageSource="background1.jpg"/>
	</Window.Background>

	<Grid x:Name="LayoutRoot">
		<Border BorderBrush="Black" BorderThickness="1" Background="#BFFFFFFF" CornerRadius="20" Margin="10">
			<FlowDocumentScrollViewer x:Name="docEngineInfo" Margin="20" Style="{DynamicResource FlowDocumentScrollViewerStyle1}" VerticalScrollBarVisibility="Auto">
				<FlowDocument>
					<Paragraph><Run Text="FlowDocumentScrollViewer"/></Paragraph>
				</FlowDocument>
			</FlowDocumentScrollViewer>
		</Border>
	</Grid>
</Window>